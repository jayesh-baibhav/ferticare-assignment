<!DOCTYPE html>
<html>
    <head>
        <title>Login</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
        <script src="https://use.fontawesome.com/3a150c6beb.js"></script>
        <link rel="stylesheet" href="./css/main.css" />
        <link rel="stylesheet" href="./css/style.css" />

        <script type="text/javascript">
            $(document).ready(() => {
                $("#form").submit((event) => {
                    event.preventDefault();

                    $.ajax({
                        type: "POST",
                        url: "/login",
                        data: $("#form").serialize(),
                        dataType: "json",
                        success: (response) => {
                            //alert("a");
                            //console.log(response.Success);
                            $("#form")[0].reset();

                            document.getElementById("check").innerHTML = response.Success;
                            //ADD THIS CODE
                            setTimeout(() => {
                                document.getElementById("check").innerHTML = "";
                            }, 3000);
                            if (response.Success == "Success!") {
                                document.getElementById("aa").click();
                            }
                        },
                        error: () => {},
                    });
                });
            });
        </script>
    </head>
    <body>
        <!--Navigation Bar-->
        <div class="navbar">
            <div class="wp">
                <img src="img/logo.PNG" alt="" />
                <i class="fa fa-whatsapp" aria-hidden="true"> Call now: 8873-732-500</i>
            </div>

            <ul>
                <li><a class="active" href="/">Home</a></li>
                <li><a href="#doc">Fertility Doctors</a></li>
                <li><a href="#serv">Our Services</a></li>
                <li><a href="#knowledge">Knowledge Center</a></li>
                <li><a href="#contact">Contact Us</a></li>
            </ul>
        </div>
        <div class="col-md-4 col-md-offset-4 form-card">
            <div>
                <p>Login</p>
            </div>
            <div class="form-group">
                <form id="form" method="post">
                    <input type="text" name="email" placeholder="E-mail" required="" class="form-control" /><br />
                    <input type="password" name="password" placeholder="Password" required="" class="form-control" /><br />
                    <input type="submit" value="Login" class="btn btn-success" />
                </form>
            </div>
            <div class="mssg bg-danger">
                <span id="check"></span>
            </div>
            <div id="LangTable"><a href="/profile" id="aa"></a></div>
            <div><span>Do you forgot password? </span><a href="/forgetpass">click here</a></div>
            <div id="LangTable"><span>Do you want to register a new Account? </span><a href="/reg">click here</a></div>
        </div>
    </body>
</html>
